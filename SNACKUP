#include<iostream>
using namespace std;

int main()
{
    //program to print the input
    
    int n = 0,t=0;
    
    cin >> t; //the number of test cases
    cin >> n;
    for(int i = 0; i < t ; i++)
    {
        cout << n << endl; //the number of rounds
    
        for(int j = 1; j <=n; j++)
        {
            cout << n << endl;
            for(int k = 1; k <= n; k++)
            {
               cout << k << " ";
               for(int k = 1; k <= n; k++ )
               {
                   cout << k << " ";
               }
               cout << endl;
            }
        }
    }
}
