#include<iostream>
using namespace std;
int main()
{
    int t,a,d,count=0;
    cin>>t;
    for(int i=0;i<t;i++)
    {
        cin>>a;
        count=0;
        while(a>0)
        {
            d=a%10;
            if(d==4)
            {
                count++;
            }
            a=a/10;
        }
        cout<<count<<endl;
        
    }
    
    return 0;
}
