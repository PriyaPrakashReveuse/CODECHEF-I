#include <iostream>
using namespace std;

int main()
{
    int t=0,n=0,a,b;
    cin>>t;
    for(int i=0;i<t;i++)
    {
        cin>>n;
        for(int j=0;j<n;j++)
        {
            cin>>a>>b;
        }
        int c=1;
        for(int j=2;j<=n;j++)
        {
            c^=j;
        }
        cout<<c<<endl;
    }
    return 0;
}
